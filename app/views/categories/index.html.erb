<div class="row">

  <div class="col-lg-6">

    <div class="note-create">

    <h1>New Category</h1>

    <%= render 'form' %>

    <%= link_to 'Back', notes_path %>

    </div>

  </div>

  <div class="col-lg-6">

      <p id="notice"><%= notice %></p>

      <h1>Categories</h1>

      <table class="tabele table-condensed">

          <% @categories.each do |category| %>

            <tr>

              <td style="padding-right:50px; font-size:15px;">
              <%= category.name %></button></td>

              <td><button type="button" class="btn btn-info"><%= link_to 'Edit', edit_category_path(category), :style=>"color:white;" %></button></td>

              <td><button type="button" class="btn btn-danger">
              <%= link_to 'Destroy', category, method: :delete, data: { confirm: 'Are you sure?' }, :style=>"color:white;" %>
              </button></td>

            </tr>

          <% end %>

      </table>

      <br>

  </div>

</div>

