<div class="map-show">

<%= image_tag(@map.photo, {:style=>"width:100%; border-radius:5px 5px 0px 0px;"}) %>

<ul style="padding:10px;">

<li style="font-size:25px;">
  <strong><%= @map.title %></strong>
</li>

<p>
  <strong>Rating:</strong>
  <div class='star-rating' data-score=<%= @map.rating %>></div>
</p>

<script>
    $('.star-rating').raty({
      half: true,
      path: '/assets/',
      readOnly: true,
      score: function() {
            return $(this).attr('data-score');
    }
  });
</script>

<li>
<table style="position:relative; width:100%;">
  <tr>
  <td>
  <%= image_tag(@map.user.image, {:style=>"height:50px; width:50px; border-radius:50%; position:absolute; top:0px"}) %></td>

  <td style="padding-left:70px;height:50px;">
    <%= simple_format(@map.comment) %></td>
  </tr>
</li>
</table>

<div id="map" style='width: 100%; height: 600px;'></div>
 
  

<% if user_signed_in? %>
<%= link_to 'Edit', edit_map_path(@map) %> |
<% end %>

<%= link_to 'Back', maps_path %>

</div>