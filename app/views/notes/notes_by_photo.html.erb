<div class="notes_by_photo_order">

<div class="btn-group" role="group" aria-label="..." >

  <button type="button" class="btn btn-default">
  	<%=link_to_unless_current "RECENT", notes_by_photo_note_path, class:"black" %>
  </button>

  <button type="button" class="btn btn-default">
  	<%=link_to_unless_current "RANDOM", notes_by_photo_random_note_path, class:"black" %>
  </button>

</div>

</div>

<% @notes.each do |note| %>

<div class="notes_by_photo">

      <%=link_to image_tag(note.photo, {:style=>"border-radius:5px; width:100%; height:100%;"}) %>

      <div class="under_notes_by_photo">

        <p><strong>
          <%=link_to note.title, note_path(note), class: "white" %>
        </strong></p>

      </div>

      <div class="note_time">
      <%=link_to note.created_at.to_formatted_s(:without_second), note_path(note), class: "white" %>
      </div>
        

</div>

<% end %>
