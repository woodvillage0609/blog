<%= form_for(@note) do |f| %>
  <% if @note.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@note.errors.count, "error") %> prohibited this note from being saved:</h2>

      <ul>
      <% @note.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field" style="padding-bottom:20px;">

    <%= f.label :title %><br>
    <%= f.text_field :title, class: "form-control" %>

  </div>

  <div class="field" style="padding-bottom:20px;">

    <%= f.label :content %><br>
    <%= f.text_area :content, class: "form-control", :style=>"height:300px;" %>

  </div>

  <div class="field" style="padding-bottom:20px;">
    <%= f.label :photo %>
    <%= f.file_field :photo %>
  </div>

  <div class="field" style="padding-bottom:20px;">

    <%= f.label :category %><br>
    <%= f.collection_select :category, Category.all, :id, :name, {include_blank:"選択してください"}, class: "form-control" %>

  </div>

  <div class="actions" style="padding-bottom:20px;">

    <%= f.submit "投稿する", class: "btn btn-success", :style=>"padding:10px 30px;" %>

  </div>

<% end %>
