
<div class="notes_by_photo_order">

<div class="btn-group" role="group" aria-label="..." >

  <button type="button" class="btn btn-default">
    <%=link_to_unless_current "RECENT", articles_path, class:"black" %>
  </button>

  <button type="button" class="btn btn-default">
    <%=link_to_unless_current "RANDOM", articles_random_article_path(:id), class:"black" %>
  </button>

</div>

</div>

    <% @articles.each do |article| %>

    <div class="article-index">

        <%=link_to image_tag(article.image, { class:"article-index-image"}), article %>

        <ul style="padding:5px 10px 5px 10px;">

        <li style="font-size:18px; padding-bottom:15px;"><strong><%=link_to article.title.truncate(35), article, class: "black" %></strong></li>
        
        <li>
        <table><tr>
        <td style="padding-right:5px;">
        <%= image_tag(article.user.image, {:style=>"height:50px; width:50px; border-radius:50%;"}) %></td>
        <td>
        <%= simple_format(article.comment.truncate(55)) %>
        </td>
        </tr></table>
        </li>

        <li style="position:absolute; left:10px; bottom:5px; color:#808080;">
        <span class="fa fa-paperclip"> <%= article.source %></span></li>

        <%if user_signed_in? %>
        <li style="position:absolute; right:10px; bottom:5px;"><%= link_to 'Destroy', article, method: :delete, data: { confirm: 'Are you sure?' } %></li>
        <% end %>
      </ul>
    </div>

    <% end %>
